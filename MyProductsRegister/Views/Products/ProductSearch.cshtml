@{
    ViewData["Title"] = "Search Results";
}
@model MyProductsRegister.Models.ManufacturerProducts

<h2>Search Results for Products</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Search Results for Manufacturers</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer.FirstOrDefault().NumberEmployees)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Manufacturer)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberEmployees)
                </td>
                <td>
                    <a asp-controller="Manufacturer" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Manufacturer" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Manufacturer" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>