@{
}
@model IEnumerable<MyProductsRegister.Models.Manufacturer>

<h2>Search bland alla poster</h2>
<p>Sök bland samtliga poster i både Produkter och Tillverkare</p>
<!-- Skapa textfält och knapp för öskning av produkter -->
<form asp-action="ProductSearch" asp-route-search="search">
    <label class="control-label" name="search">Search: </label>
    <input class="form-control" type="text" name="search" />
    <input type="submit" value="search" class="btn btn-success" />
</form>

<h1>Se tillverkare av produkter</h1>
@foreach (var manufacturer in Model) {
    <h2>@Html.DisplayFor(model => manufacturer.Name)</h2>
    <p>@Html.DisplayFor(model => manufacturer.Name) har tillverkat följande produkter</p>
    <ul>
        @foreach(var product in manufacturer.Products)
        {
            <li>@Html.DisplayFor(model => product.Name) - @Html.DisplayFor(model => product.Description)</li>
        }
    </ul>
}
<p>
    <a asp-action="Index" class="btn btn-primary">Tillbaka till produkter</a>
</p>